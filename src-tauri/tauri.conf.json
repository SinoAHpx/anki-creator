{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "anki-creator",
	"version": "0.1.0",
	"identifier": "com.anki-creator.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "Anki Creator",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false,
				"skipTaskbar": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/icon.ico"
		]
	}
}
